[Unit]
Description=OpenClaw Main Subagent Monitor
After=openclaw.service network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu
Environment=HOME=/home/ubuntu
Environment=PATH=/home/ubuntu/.npm-global/bin:/usr/local/bin:/usr/bin:/bin
Environment=TZ=Asia/Taipei
Environment=LANG=C.UTF-8
Environment=LC_ALL=C.UTF-8
EnvironmentFile=-/home/ubuntu/.openclaw/openclaw.env
ExecStart=/home/ubuntu/DINO_OPENCLAW/scripts/cloud/openclaw-subagent-sentinel.sh
Restart=always
RestartSec=3
TimeoutStopSec=15
KillMode=control-group

[Install]
WantedBy=multi-user.target
